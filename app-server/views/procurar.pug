extends layout

block content
    
    .w3-light-grey
        header.w3-container.w3-theme-d4.w3-text-white
            h1
                a.w3-opacity(href="/mainPage" style="text-decoration: none") Gestor de Recursos
        
        .w3-bar.w3-theme-d4
            h3.w3-margin-left Resultados: #{procura}
        .w3-bar.w3-theme-d4
            span
                if tab === "titulo" 
                    button.w3-bar-item.w3-hover-opacity.w3-padding.w3-theme-d3 Encontrado no Título
                    - var refR = Number(r) -1
                    a(href=`/recursos/procurar?hashtag=${ht}&r=${refR}`)    
                        button.w3-bar-item.w3-hover-opacity.w3-padding.w3-theme-d4 Encontrado nas Hashtags
                    - var ref = "/recursos/procurar?titulo=" + procura
                    
                else
                    - var refR = Number(r) + 1
                    button.w3-bar-item.w3-hover-opacity.w3-padding.w3-theme-d4(onclick=`window.history.go(${refR})`) Encontrado no Título
                    button.w3-bar-item.w3-hover-opacity.w3-padding.w3-theme-d3 Encontrado nas Hashtags
                    - var ref = "/recursos/procurar?hashtag=" + procura




        include ./listaRecursos.pug


        .w3-container.w3-theme-d4.w3-text-white.w3-padding.w3-padding-large
            span(onclick=`window.history.go(${r})` style="text-decoration: underline; cursor:pointer;" ) Voltar

